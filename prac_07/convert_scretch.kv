BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        color: (1, 0, 1, 5)
        TextInput:
            id: input_miles
            text: '24'
            font_size: 48
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25

            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert Miles to Kilometer'
        on_press: app.handle_calculate()
        color: (1, 0, 1, .9)
    Label:
        id: output_label
        font_size: 48
        text: '54.717'
        color: (1, 1, 0, 1)
