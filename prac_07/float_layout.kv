FloatLayout:
    Button:
        size_hint: 0.5, 0.2   # absolute size
        size: 40, 20
        pos: 60, 90
        text: 'one'
    Button:
        size_hint: 0.5, 0.2
        size: 60, 80
        pos: 70, 80
        text: 'two'
    Button:
        size_hint: 0.5, 0.2  # relative size of 50% width and 20 % height
        pos_hint: {'x': 0.5, 'y': 0.5}  # relative position from (0,0)
        text: 'three'
    Button:
        size_hint: 0.5, 0.2  # relative size of 50% width and 20 % height
        pos_hint: {'x': 0.5, 'y': 0.5}  # relative position from (0,0)
        text: 'Four'
